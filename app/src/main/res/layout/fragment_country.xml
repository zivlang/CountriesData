<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/world_map"
        android:alpha="0.4"
        android:scaleType="centerCrop"/>
    <ScrollView android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="10dp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/countryNameId"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="name"
                    android:textSize="30sp"
                    android:textAlignment="center"/>
                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="20dp"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/flagId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_margin="10dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Capital"
                        android:textSize="20sp"
                        android:textAlignment="gravity"/>
                    <TextView
                        android:layout_margin="10dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Population"
                        android:textSize="20sp"
                        android:textAlignment="gravity"/>
                    <TextView
                        android:layout_margin="10dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:text="Region"
                        android:textSize="20sp"
                        android:textAlignment="gravity"/>
                    <TextView
                        android:layout_margin="10dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sub-region"
                        android:textSize="20sp"
                        android:textAlignment="gravity"/>
                    <TextView
                        android:layout_margin="10dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6"
                        android:text="Area (km2)"
                        android:textSize="20sp"
                        android:textAlignment="gravity"/>
                    <TextView
                        android:layout_margin="10dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6"
                        android:text="Gini"
                        android:textSize="20sp"
                        android:textAlignment="gravity"/>
                    <TextView
                        android:layout_margin="10dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:text="Lat Long"
                        android:textSize="20sp"
                        android:textAlignment="gravity"/>
                    <TextView
                        android:layout_margin="10dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Time Zones"
                        android:textSize="20sp"
                        android:textAlignment="gravity"/>
                </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="20dp">
                        <TextView
                            android:layout_margin="12dp"
                            android:textColor="@color/colorPrimary"
                            android:id="@+id/capitalId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:textAlignment="gravity"/>
                        <TextView
                            android:layout_margin="12dp"
                            android:textColor="@color/colorPrimary"
                            android:id="@+id/populationId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:textAlignment="gravity"/>
                        <TextView
                            android:layout_margin="12dp"
                            android:textColor="@color/colorPrimary"
                            android:id="@+id/subregionId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.1"
                            android:textSize="17sp"
                            android:textAlignment="gravity"/>
                        <TextView
                            android:layout_margin="12dp"
                            android:textColor="@color/colorPrimary"
                            android:id="@+id/regionId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="17sp"
                            android:textAlignment="gravity"/>
                        <TextView
                            android:layout_margin="12dp"
                            android:textColor="@color/colorPrimary"
                            android:id="@+id/areaId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="17sp"
                            android:textAlignment="gravity"/>
                        <TextView
                            android:layout_margin="12dp"
                            android:textColor="@color/colorPrimary"
                            android:id="@+id/giniId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="17sp"
                            android:textAlignment="gravity"/>
                        <TextView
                            android:layout_margin="12dp"
                            android:textColor="@color/colorPrimary"
                            android:id="@+id/latlngId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="17sp"
                            android:textAlignment="gravity"/>
                        <TextView
                            android:layout_margin="12dp"
                            android:textColor="@color/colorPrimary"
                            android:id="@+id/timeZonesId"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:textSize="15sp"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:text="Languages"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        android:layout_marginStart="10dp">
                    </TextView>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/languagesListId"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:text="Currencies"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        android:layout_marginStart="10dp">
                    </TextView>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/currenciesListId"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>